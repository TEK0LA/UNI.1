#include <stdio.h>
void hanoi(int n,char x,char y,char z)
{
	if ( n == 1 )
			printf ("%c to %c\t\n",x,z);
	else {
			hanoi( n-1, x, z, y );      //x -z- y
			printf ("%c to %c\t",x,z);
			hanoi( n-1, y, x, z );      //y -x- z}
}
int main(void){
	printf("hanio:\n");
	int x;
	scanf ("%d",&x);
	hanoi (x,'X','Y','Z');
return 0;}

